<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.c4q.final_retake.CardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        <TextView
            android:id="@+id/cards_remaining"
            android:layout_width="183dp"
            android:layout_height="38dp"
            android:text="@string/cards_remaining" />
        <Button
            android:id="@+id/shuffle_button"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="Shuffle New Deck" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:paddingBottom="5dp"
        android:text="@string/break_point"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="8sp" />

    <LinearLayout
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/how_many_cards"
            android:layout_width="173dp"
            android:layout_height="38dp"
            android:paddingTop="5dp"
            android:text="@string/how_many_cards" />

        <Button

            android:id="@+id/draw_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/draw_cards" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>














</LinearLayout>



